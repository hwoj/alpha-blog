<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		<% if flash.any?%>
		    <% flash.each do |name, message| %>
			    <div class='alert alert-<%= "#{name}" %>'>
			      	<a href="#" class="close" data-dissmiss="alert">&#215</a>
			      	<%= content_tag :div, message, :id => "flash_#{name}" if message.is_a?(String) %>
			    </div>
		    <%end%>
		<%end%>
	</div>
</div>